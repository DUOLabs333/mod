     def split_string_by_char(string,char=':'):
     
         PATTERN = re.compile(rf'''((?:[^\{char}"']|"[^"]*"|'[^']*')+)''')
     
         return [_ for _ in list(PATTERN.split(string)) if _ not in ['', char]]
     
     
     
     
     
