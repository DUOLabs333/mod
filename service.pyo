     def flatten_list(items):
     
         """Yield items from any nested iterable."""
     
         for x in items:
     
             if isinstance(x, typing.Iterable) and not isinstance(x, (str, bytes)):
     
                 for sub_x in flatten_list(x):
     
                     yield sub_x
     
             else:
     
                 yield x
     
     
     
     def print_list(l):
     
         for element in l:
     
             if element is None:
     
                 print(end='')
     
             else:
     
